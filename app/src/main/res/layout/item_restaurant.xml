<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_restaurants_image"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_restaurant_24"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/item_restaurants_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_restaurants_image"
        android:text="Name"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_restaurants_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_restaurants_name"
        app:layout_constraintStart_toEndOf="@id/item_restaurants_image"
        android:text="Location"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/item_restaurants_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_restaurants_location"
        app:layout_constraintStart_toEndOf="@id/item_restaurants_image"
        android:text="Price"
        android:textSize="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>